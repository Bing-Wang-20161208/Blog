<!-- hbs引擎 -->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Blog</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>

    <header>
      <h1>{{title}}</h1>
    </header>

    <nav>
      <span><a href="/" title="首页">首页</a></span>
      <span><a href="/archive" title="存档">存档</a></span>
      <span><a href="/tags" title="标签">标签</a></span>
      <span><a href="/links" title="友情链接">友情链接</a></span>
    {{#if user}}
      <span><a href="/upload" title="上传">上传</a></span>
      <span><a href="/post" title="发表">发表</a></span>
      <span><a href="/logout" title="登出">退出</a></span>
    {{else}}
      <span><a href="/login" title="主页">登录</a></span>
      <span><a href="/reg" title="注册">注册</a></span>
    {{/if}}
      <span><form action="/search" method="get"><input type="text" name="keyword" placeholder="搜索" class="search"></form></span>
    </nav>

    <article>
      {{#if success}}
        <div>
          {{success}}
        </div>
      {{/if}}
      {{#if error}}
        <div>
          {{error}}
        </div>
      {{/if}}

      {{{body}}}

    </article>
  </body>
</html>
