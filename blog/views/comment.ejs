<!-- 自定义评论系统-->
<br>
<% post.comments.forEach(function(comment, index) { %>
  <div style="padding-left: 4em;">
    <p><img src="<%= comment.head %>" class="l_head"><a href="<%= comment.website %>"><%= comment.name %></a>
    <span class="info"> 回复于 <%= comment.time %></span></p>
    <p><%- comment.content %></p>
  </div>
<% }) %>
<form method="post">
  <% if (user) { %>
    姓名：<input type="text" name="name" value="<%= user.name %>"><br>
    邮箱：<input type="email" name="email" value="<%= user.email %>"><br>
    网址：<input type="url" name="website" value="/u/<%= user.name %>"><br>
  <% } else { %>
    姓名：<input type="text" name="name"><br>
    邮箱：<input type="email" name="email"><br>
    网址：<input type="url" name="website" value="http://"><br>
  <% } %>
    <textarea name="content" rows="5" cols="80"></textarea><br>
    <input type="submit" value="留言">
</form>
